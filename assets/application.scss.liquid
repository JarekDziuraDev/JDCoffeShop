@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,500;0,700;1,600&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Pacifico&display=swap');

html, body {
    font-family: 'Poppins';
    font-size: 15px;
    line-height: 1.5;
    box-sizing: border-box;
    margin: 0;
    overflow-x: hidden;
    top: 0;
    left: 0;
    background-color: rgb(247, 239, 226);
}

// NAVIGATION
.header {

    a.nav-link {
        text-decoration: none;
        color: rgba(100, 34, 23, 0.733);
        font-weight: 500;
    }
    
    a.nav-link:hover {
        color: #e74c3c;
    }
    
    ul {
        list-style: none;
    }
    
    .navbar {
        background-color: rgba(223, 183, 107, 0.76);
        padding: 3rem 2rem;
        height: 0rem;
        min-height: 12vh;
    }

    .navbar-brand {
        font-family: 'Pacifico', cursive;
        font-size: 2.5rem;
        color: rgba(100, 34, 23, 0.733);
    }

    .navbar-toggler {
        font-size: 2rem;
        color: rgba(158, 43, 22, 0.733);
        background-color: transparent;
        border: none;
        padding: 10px 6px;
        outline: none;
    }


}



