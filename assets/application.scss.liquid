// HERO
.inner-hero-section {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 300px;
}

.inner-hero-section img,
.inner-hero-section svg {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-size: contain;
    background-position: bottom;
    background-repeat: no-repeat;
    object-fit: cover;
    z-index: -1;
}