@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,500;0,700;1,600&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Pacifico&display=swap');

html, body {
    font-family: 'Poppins';
    font-size: 15px;
    line-height: 1.5;
    box-sizing: border-box;
    margin: 0;
    overflow-x: hidden;
    top: 0;
    left: 0;
    background-color: rgb(247, 239, 226);
}

// NAVIGATION
.header-section {
    a.nav-link {
        text-decoration: none;
        color: rgba(100, 34, 23, 0.733);
        font-weight: 500;
    }
    
    a.nav-link:hover {
        color: #e74c3c;
    }
    
    ul {
        list-style: none;
    }
    
    .navbar {
        background: rgba(223, 183, 107, 0.76);
        padding: 3rem 2rem;
        height: 0rem;
        min-height: 12vh;
    }

    .navbar-brand {
        font-family: 'Pacifico', cursive;
        font-size: 3.5rem;
        color: rgba(100, 34, 23, 0.733);
    }

    .navbar-toggler {
        font-size: 3rem;
        color: rgba(158, 43, 22, 0.733);
        background-color: transparent;
        border: none;
        padding: 10px 6px;
        outline: none;
    }

    .navbar-collapse{
        .navbar-nav {
            font-size: 2rem;
        }
    }

    .badge {
        background-color: rgba(158, 43, 22, 0.733);
    }
}

// HERO

.hero-section {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 300px;

    .hero-img img,
    .hero-img svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    
    background-size: cover;
    background-position: center top;
    background-repeat: no-repeat;
    object-fit: cover;
    
    }

    .hero-content {
        position: absolute;
        color: wheat;
        left: -15%;
        z-index: 1;
    }

    @media (max-width: 650px) {
        .hero-content {
            left: 5%;
        }
    }
}

// PRODUCT SLIDER

.featured-collection-slider {
    background-color: rgba(30,30,30,0.2);
    
    .section-header {
        display: flex;
        width: 100%;
        height: 150px;
        align-items: center;
        justify-content: center;
        color: rgba(100, 34, 23, 0.733);
    }
    
    .carousel-cell{
        display: flex;  
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width:100%;
    }
    
    .carousel-content {
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        position: absolute;
        width: 300px;
        height: 100px;
        background-color: rgba(30,30,30,0.5);
        color: wheat;
        left: 20%;
        bottom: 10%;
    }

    .carousel-content a {
        text-decoration: none;
        color: wheat;
        font-weight: 500;
    }
    
    .carousel-content a:hover {
        text-decoration: underline;
    }
    
    .carousel-content-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    
    .carousel-content-buy {
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 30px;
    }
    
    .flickity-button:disabled{
        pointer-events: all!important;  
    }
    

}
